<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:minHeight="72dp"
                                    android:layout_marginLeft="@dimen/md_small_margin"
                                    android:layout_marginRight="@dimen/md_small_margin"
                                    android:elevation="4dp"

    >

    <LinearLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/md_small_margin"
        android:background="@drawable/md_ripple_white"
        android:clickable="true"
        >

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-2-07"
            android:textSize="12sp"
            android:lines="1"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/md_small_margin"
            android:layout_marginBottom="@dimen/md_small_margin"
            android:textColor="@color/text_color_deep"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            >

            <TextView
                android:id="@+id/tv_reads"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp24"
                android:minWidth="@dimen/dp36"
                android:layout_gravity="left|center_vertical"
                android:drawableLeft="@drawable/ic_visibility_grey600_18dp"
                android:text="2345"
                android:drawablePadding="@dimen/dp4"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/tv_comments"
                android:layout_width="@dimen/dp72"
                android:layout_height="24dp"
                android:paddingLeft="@dimen/md_small_margin"
                android:paddingRight="@dimen/md_small_margin"
                android:layout_marginRight="@dimen/dp4"
                android:layout_gravity="right|center_vertical"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_textsms_grey600_18dp"
                android:background="@drawable/md_ripple_white"
                android:text="12"
                android:textColor="@color/text_color_light"
                android:ellipsize="end"
                android:elevation="1dp"
                />

        </FrameLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>